@page
@model LoginModel

@{
    ViewData["Title"] = "Anmelden";
}


<div class="row">

    <div class="col-md-3">
    </div>

    <div class="col-md-6">
        <section>
            <h1>@ViewData["Title"]</h1>
            <h4>Melde dich mit deinen Daten an.</h4>

            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">E-Mail Adresse</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Passwort</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                            Anmeldedaten merken
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Weiter</button>
                </div>
                <div class="form-group">
                    @*<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Passwort vergessen?</a>
                    </p>*@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrieren</a>
                    </p>
                    @*<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-3">
    </div>

</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
