@model List<BlogBase.Models.BlogPost>;
@{
    ViewData["Title"] = "BlogBase";

<div class="text-center">
    <h1 class="display-3">BlogBase</h1>
    <p class="lead">publish a blog and manage it's content</p>
</div>

    foreach (BlogPost blogPost in Model) {
        <div class="row mt-3">

            <div class="col-3">

            </div>

            <div class="col-6">
                <div class="card">
                    <img id="@blogPost.Title" onclick="loadPicture(@blogPost.Id)" src="#" class="card-img-top"/>
                    <script>
                            function loadPicture(id) {
                                $.ajax({
                                type: 'GET',
                                url: "@Url.Action("GetBlogPost")",
                                data: { id: id },
                                success: function (data) {
                                    $('@blogPost.Title').attr('src', `data:image/png;base64,${data.picture}`);
                                    debugger;
                                     $("@blogPost.Title").load(window.location.href + " #blogPicture");
                                    debugger;
                                },

                                });
                            }

                    </script>
                    <div class="card-body">
                        <h5 class="card-title">@blogPost.Title</h5>
                        <p class="card-text">@blogPost.PreviewText</p>
                        <a href="#" class="btn btn-primary">Lesen</a>
                    </div>
                </div>
            </div>

            <div class="col-3">

            </div>

        </div>
    }

}

